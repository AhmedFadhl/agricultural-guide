@model IEnumerable<agricultural_guide.Models.Advertisers>
 <main>
      <div class="pestpage">
                <h2>إدارة <b>المحاصيل</b> </h2>
                <button><a asp-action="addAdvertiser" asp-controller="Advertivsment">إضافة</a></button>
              </div>
