            <div class="adddev">
                <div class="addfild">  
                    <h2>تعديل <b>محصول </b></h2>
                    <form asp-action="Editcrop" asp-controller="Crop">
                        <div>
                        <div >
                            <span>رقم المحصول</span>
                            <input class="fild"  asp-for=crop_id placeholder="" >
                        </div>
                        <div >
                            <span>أسم المحصول</span>
                            <input class="fild"  asp-for=name placeholder="" >
                        </div>
                        <div >
