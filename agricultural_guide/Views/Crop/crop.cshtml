      
 <main>
      <div class="pestpage">
                <h2>إدارة <b>المحاصيل</b> </h2>
                <button><a asp-action="addcrop" asp-controller="Crop">إضافة</a></button>
              </div>
            <div class="devicer_manage">
                <table>
                    <thead>
                        <tr>
                            <th>أسم المحصول </th>
                            <th> كيفية التسميد</th>
                            <th>نوع المحصول</th>
                            <th>الوصف</th>
                            <th>إدارة</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody> 

                            @foreach (var item in Model)
                            {
                    @if (item.state == 2)
                    {
                        <tr>
                           
                            <td>@item.name</td>

                            @if (item.type==1)
                           {
                            <td>عبر الاشجار </td>

                           }
                           else
                           {
                           <td>عبر المساحة</td>
                            }
                            <td>@item.crop_type</td>
                            <td>@item.description</td>
                            <td class="management">
                             <span class="edit"> @Html.ActionLink("تعديل","Editcrop",new{id=@item._id})</span>
                             <span class="delet">@Html.ActionLink("حذف","DeleteCrop",new{id=@item._id})</span>

                            </td>
                        </tr>
                        }
                            }
                            
                        
                      
                    </tbody>
                </table>
             <!--

                 <a href="#"> رؤية المزيد</a>
                -->
            </div>
            </main>
        <!--main end-->
        <!--right side strart-->
        <div class="right">
            <!--top start-->
           
            <!--top end-->
         
            <!--chat start-->
            <div class="recent-advicer">
                <div class="h2count">
                    <h2 >طلبات إضافة المحاصيل
                        @{int count=0;
                        @foreach (var item in Model)
                        {
                         if (item.state==1)
                        {
                            count++;   
                        }   
                        }
                        }
                        <span >@count</span>
                    </h2>
                </div>
                <div class="contain">
                      <div class="request">
                       
                        @foreach (var item in Model)
                        {
                        if (item.state==1)
                    {
                      
                        DateTime date = DateTime.Now;
                       const string DateFormat = "dd/MM/yyyy hh:mm:ss";
                       var epoch = new DateTime(1970, 1, 1, 0, 0, 0, DateTimeKind.Local);
                       var dates= epoch.AddMilliseconds(item.created_at);
                       var crop_date= date-dates;

                      <div class="chat">
                        <div class="profile-img">
                            <img src="../images/pro3.jpg" alt="">
                        </div>
                        <div class="right">
                            <div class="chat-info">
                                <h3>@item.name</h3>
                                <div class="message">
                                    <p>@item.description </p>
                                </div>
                                <small class="text-muted"> @crop_date</small>
                            </div>
                            <div class="activatebtn">
                               <div>
                                    <button class="activate">@Html.ActionLink("قبول","Editcrop",new{id=@item._id})</button>
                                    <button class="refuse">@Html.ActionLink("حذف","DeleteCrop",new{id=@item._id})</button>
                                </div>
                            </div>
                        </div>
                    </div>



                        }
                        }
                </div> 
               
                  
            </div>
            </div>
            </div>