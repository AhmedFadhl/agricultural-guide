                        </tr>
                    </thead>
                    <tbody> 

                            @foreach (var item in Model)
                             {
                        
                            URI url = new URI();
                            var path = url.url + item.image_path;
                        
                        <tr onclick="showDetiels('@item.name','@item.contact_link','@item.phone','@item.description','@path')">
                           
                            <td>@item.name</td>

                          
                            <td>@item.phone</td>
                            <td>@item.contact_link</td>
                            <td>@item.description</td>
                            <td class="management">
                             <span class="edit">@Html.ActionLink("تعديل","EditAdvertiser",new{id=@item._id})</span>
                             <span class="delet">@Html.ActionLink("حذف","DeleteAdvertiser",new{id=@item._id})</span>

                            </td>
                        </tr>
                        }
                            }
                            
                        
                      
                    </tbody>
                </table>
