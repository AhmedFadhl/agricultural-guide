@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
 
</head>
<body>

<h2>تسجبل الدخول  </h2>
 
<button  class="loginbtn" onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Login</button>

<div id="id01" class="modal">
  
  <form class="modal-content animate" action="/action_page.php" method="post">
    <div class="imgcontainer">
      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
      <img src="/images/pro4.jpg" alt="Avatar" class="avatar">
    </div>

    <div class="container">
      <label for="uname"><b>رقم الهاتف</b></label>
      <input type="number" placeholder=" أدخل رقم هاتفك" name="phone" required>

     
        
      <button class="loginbtn" type="submit">تجيل دخول</button>
     
    </div>

    <div class="container" style="background-color:#f1f1f1">
      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">الغاء</button>
    </div>
  </form>
</div>

<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>

</body>
</html>
