 <main>
      <div class="pestpage">
                <h2>إدارة <b>الأسمدة</b> </h2>
                <button><a asp-action="addfer_type" asp-controller="Fertilizer">إضافة</a></button>
              </div>
            <div class="devicer_manage">
                <table>
                    <thead>
                        <tr>
                            <th>أسم التركيبة </th>
                            @for (var i = 0; i < 3; i++)
                            {
                       


                            <th>السماد</th>
                                
                            }
                            <th>إدارة</th>
                        </tr>
                    </thead>
                    <tbody> 
                            @foreach (var item in Model)
                            {
                    var ins = 0;
                    <tr>
                            
                                <td>@item.name</td>
                               @foreach (var fer in item.fertilizer)
                               {
                                  
                                 <td>@fer </td>
                                 ins ++;
                              
                               }
                              @if (ins==1)
                               {
                                   <td></td>
                                   <td></td>
                               }@if (ins==2)
                               {
                                   <td></td>
                               }  
                          
                        <td class="management">
                             <span class="edit"><a href="@Url.Action("Editfer_type", "Fertilizer",new{id=@item._id})">
                         <img alt=@item.name src="/images/icons/draw.png"> </a></span>
                             <span class="delet"><a href="@Url.Action("Deletefer_type", "Fertilizer",new{id=@item._id})">
                         <img alt=@item.name src="/images/icons/trash.png"> </a></span>

                            </td>
                        
                        </tr>
                            }
                            
                            
                        
                      
                    </tbody>
                </table>
             <!--

                 <a href="#"> رؤية المزيد</a>
                -->
            </div>
            </main>
