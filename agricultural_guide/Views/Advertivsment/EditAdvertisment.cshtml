                             @Html.DropDownListFor(x => Model.advertiser, Model.advertisers, "أختر نوع للمحصول")
                            </div>
                            </div>
                             <div>
                            <span>صورة المحصول</span>
                            <input class="fild" multiple type="file" name="crop_image"   asp-for=ads_image placeholder="" >
                        </div>

                         
                        </div>
                      
                    
                     <div>
                            <input class="submit" value="Save" type="submit">
                            <button class="cancel" onclick="backtocrop()" >الغاء</button>
                    </div>
                    </form>
            </div>
            </div>
 
          
           
        </main>
